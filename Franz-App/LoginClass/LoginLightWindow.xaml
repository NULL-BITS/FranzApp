<Page x:Class="Franz_App.LoginClass.LoginLightWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Franz_App.LoginClass"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginLightWindow">

    <Grid UseLayoutRounding="False" Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblLogin" Content="Login" HorizontalAlignment="Left" Margin="148,26,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtEMail" HorizontalAlignment="Left" Height="23" Margin="50,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label x:Name="lblEMail" Content="E-Mail" HorizontalAlignment="Left" Margin="46,88,0,0" VerticalAlignment="Top" FontSize="10"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="50,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label x:Name="lblPassword" Content="Passwort" HorizontalAlignment="Left" Margin="46,131,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Button x:Name="btnLogin" Content="Anmelden" HorizontalAlignment="Left" Margin="50,207,0,0" VerticalAlignment="Top" Width="250">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>



        </Button>
        <Button x:Name="btnPasswordForgot" Content="Passwort vergessen?" HorizontalAlignment="Left" Margin="201,222.77,0,0" VerticalAlignment="Top" Width="100" UseLayoutRounding="False" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF009BFF" FontStyle="Italic" FontSize="10"/>
        <Button x:Name="btnDarkmode" Content="Darkmode" HorizontalAlignment="Right" Margin="0,11,10,0" VerticalAlignment="Top" Width="75">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Page>
